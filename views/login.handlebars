<div class="row">
	<div class="col-lg-3 col-md-3 col-sm-2 col-xs-0"></div>
    
	<div class="col-lg-6 col-md-6 col-sm-8 col-xs-12 container">
        <p class="error-mess">{{message}}</p> <!-- error message if login fails -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 group">
                <input id="username" name="username" placeholder="Email" type="text" class="input">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 group">
                <input id="password" name="password" placeholder="Password" type="password" class="input" data-type="password">
            </div>
        </div>
        <div class="row">
            <div class="group">
                <input id="loginSubmitBtn" type="submit" class="button" value="Sign In">
            </div>
        </div>
    </div>

	<div class="col-lg-3 col-md-3 col-sm-2 col-xs-0"></div>
</div>
