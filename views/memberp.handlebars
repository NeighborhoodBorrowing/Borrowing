<!--pending approval div-->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 main-item-cont" id="pend-app-div">
        <div class="row">
            <div class="col-lg-1 col-md-1 col-sm-3 col-xs-3">
                <button class="close"><a id="pend-app-close" href="">X</a></button> 
            </div>
            <div class="col-lg-10 col-md-10 col-sm-6 col-xs-6">
                <h4 class="centered">Your Items Pending Approval</h4>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-3 col-xs-3"></div>
        </div>
        <!--for user with items-->
        {{#each userAndInfo.items}}
            <!--if borrowed status is pending approval-->
            {{#ifEqual borrowedStatus -1}}
                <div class="row">
                    <!--spacer-->
                    <div class="col-lg-1 col-md-1 col-sm-0 col-xs-0 "></div>
                    <!--main item container-->
                    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 container item-cont">
                        <!--item name-->
                        <div class="row">
                            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 ">
                                <p class="item-name">{{name}}</p>
                                <hr>
                                <!--subrow-->
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                        <!--item description-->
                                        <p class="item-descr centered">About This Item: 
                                           <br> 
                                           <span class="reset-color">{{description}}</span>
                                        </p>
                                        <!--replacement value-->
                                        <p class="item-descr centered">Replacement Value: 
                                           <br>
                                           <span class="reset-color">${{value}} USD</span>
                                        </p>
                                        <!--category-->
                                        <p class="item-descr centered">Category: 
                                           <br>
                                           <span class="reset-color">{{categoryname}}</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!--spacer-->
                            <div class="col-lg-1 col-md-1 col-sm-0 col-xs-0 "></div>
                            <!--if item has photo, display-->
                            {{#if picture}}
                                <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 ">
                                    <img class="item-photo come-in" src='{{picture}}'>
                                    <!--remove item-->
                                    <div class="row">
                                        <button class="removeItem" id = ''><a href="#">Remove Item</a></button>
                                    </div>
                                </div>
                            {{/if}}
                        </div>
                        <!--borrowed information-->
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">

                                {{#if borrowedItemsId}} <!-- only display if the item has been borrowed before-->
                                    <hr>
                                    <!--status-->
                                    <p class="item-descr">Status: 
                                        <span class="reset-color">{{ borrowedStatusText}}</span>
                                    </p>

                                    <hr>
                                   <!-- Pending Approval is -1 -->

                                    {{#ifEqual borrowedStatus -1}}
                                    <div class="row">
                                       <!-- These class names are used in the javascript, please do not change them-->
                                            
                                        <button class="approveBorrowRequest" id = '{{borrowedItemsId}},{{id}}'><a href="#">Approve Request</a></button>
                                        <button class="denyBorrowRequest" id = '{{borrowedItemsId}},{{id}}' ><a href="#">Deny Request</a></button>
                                    </div>
                                    {{/ifEqual}}
                                    <!--borrower-->
                                    <p class=" item-descr borrow-decl">
                                        <span class="underline">Borrower:</span> 
                                        <span class="reset-color">{{ borrowerFirstName}}</span>
                                    </p>
                                    <!--borrowed on-->
                                    <p class=" item-descr borrow-decl">
                                        <span class="underline">Borrowed On:</span> 
                                        <span class="reset-color">{{ borrowedDate}}</span>
                                    </p>
                                    <!--due date-->
                                    <p class=" item-descr borrow-decl">
                                        <span class="underline">Due By:</span> 
                                        <span class="reset-color">{{ dueDate}}</span>
                                    </p>
                               {{/if}}
                            </div>
                        </div>
                        
                    </div><!--end main item div-->
                    <!--spacer-->
                    <div class="col-lg-1 col-md-1 col-sm-0 col-xs-0 "></div>
                </div>
            {{/ifEqual}}
        {{/each}}
                
    </div>
</div><!--end pending approval div-->

