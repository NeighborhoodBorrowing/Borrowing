<div class="row">
	<div class="col-lg-3 col-md-3 col-sm-2 col-xs-0"></div>
	<div class="col-lg-6 col-md-6 col-sm-8 col-xs-12 container">
		<div class="signup-wrap">
			<div class="signup-html">
				<p class="error-mess">{{message}}</p> <!-- error message if login fails -->
				<div class="signup-form">
					<div class="sign-up-htm">
						<div class="group">
							<input id="firstName" name="firstname" placeholder="First Name" type="text" class="input" required>
						</div>
						<div class="group">
							<input id="lastName" name="lastname" placeholder="Last Name" type="text" class="input" required>
						</div>
                        <div class="group">
							<input id="email" name="lastname" placeholder="Email Address" type="text" class="input" required>
						</div>
                        <div class="group">
							<input id="psw" name="lastname" placeholder="Password" type="text" class="input" data-type="password" required>
						</div>
                        <div class="group">
							<input id="psw-repeat" name="lastname" placeholder="Repeat Password" type="text" class="input" data-type="password" required>
						</div>
                        <div class="group">
							<input id="zipCode" name="lastname" placeholder="Zip Code" type="text" class="input" required>
						</div>
						<div class="group">
							<input id="signupSubmitBtn" type="submit" class="button" value="Sign Up">
						</div>
						<div class="hr"></div>
					</div>

				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-3 col-md-3 col-sm-2 col-xs-0"></div>
</div>




