<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
         <form class="user-form" id="signupForm" style="background:white;">
            <div class="container">
                <!--head-->
                <h1>Sign Up</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>
                    <div class="row">
                        <!--first name-->
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                            <label form="firstName"><b>First Name</b></label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-9 col-xs-9">
                            <input class="form-entry" type="text" placeholder="John/Jane" id="firstName" required>
                        </div>
                    </div>
                    <div class="row">
                        <!--last name-->
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">    
                            <label for="lastName"><b>Last Name</b></label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-9 col-xs-9">
                            <input class="form-entry" type="text" placeholder="Smith" id="lastName" required>
                        </div>
                    </div>
                    <div class="row">
                        <!--email-->
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                            <label for="email"><b>Email</b></label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-9 col-xs-9">
                            <input class="form-entry" type="text" placeholder="myemail@email.com" id="email" required>
                        </div>
                    </div>
                    <div class="row">
                        <!--password-->
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                            <label for="psw"><b>Password</b></label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-9 col-xs-9">
                            <input class="form-entry" type="password" placeholder="*********" id="psw" required>
                        </div>
                    </div>
                    <div class="row">
                        <!--repeat password-->
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                            <label for="psw-repeat"><b>Re-Enter</b></label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-9 col-xs-9">
                            <input class="form-entry" type="password" placeholder="*********" id="psw-repeat" required>
                        </div>
                    </div>
                    <div class="row">
                        <!--zip code-->
                        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                            <label for="zipCode"><b>Zip Code</b></label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-9 col-xs-9">
                            <input class="form-entry" type="text" placeholder="12345" id="zipCode" required>
                        </div>
                    </div>
                    <div class="row">
                        <!--terms-->
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 terms">
                            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms &amp; Privacy</a>.</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-1 col-md-1 col-sm-2 col-xs-2 terms"></div>
                        <!--cancel-->
                        <div class="col-lg-5 col-md-5 col-sm-8 col-xs-8 terms">
                            <button type="button" class="cancelbtn">Cancel</button>
                        </div>
                        <!--sign up-->
                        <div class="col-lg-5 col-md-5 col-sm-8 col-xs-8 terms">
                            <button type="button" id="signupSubmitBtn" class="signupbtn">Sign Up</button>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-2 col-xs-2 terms"></div>
                    </div>
            </div>
         <!--end form-->
        </form>
    </div>
</div>
